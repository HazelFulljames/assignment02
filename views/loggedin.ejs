<%- include("templates/header") %> 
    <br>
    <p>You are logged in! Hi <%= username %>! </p>
    <a class="btn btn-primary" href="/logout" role="button">Log Out</a>
    <br> <br>
    
    <p id="townCoords"></p>
    <svg id="svg" height="320" width="320">
        <!-- Set townimg using ejs -->
        <image id="townimage" height="320" width="320" href="/-1,0.png" />
    </svg>
    <div id="coords">Coordinates: </div>
    <br>

    <div id="deletion" style="content-visibility: hidden;">
        <h3>this currently doesn't work im tired as hell i'll fix it soon idk</h3>
        <p id="name">Delete Pearl?</p>
        <button id="delete">Yes</button>
        <button id="close">Close</button>
    </div>

    <br>

    <p>Town X, Town Z: </p>
    <input type="number" id="townx" name="townx" min="-10" max="10" value="-1">
    <input type="number" id="townz" name="townz" min="-10" max="10" value="0">
    <br>
    <button type="button" id="searchmap">Search Map</button>

    <br><br>
    <hr>
    <br>

    <p>Pearl X, Pearl Z: </p>
    <input type="number" id="x" name="x" min="-160" max="160">
    <input type="number" id="z" name="z" min="-160" max="160">

    <p>Pearl Type: </p>
    <select id="type" name="type">
      <option value="none">Unspecified</option>
      <option value="white">White</option>
      <option value="red">Red</option>
      <option value="green">Green</option>
      <option value="blue">Blue</option>
      <option value="cyan">Cyan</option>
      <option value="magenta">Magenta</option>
      <option value="yellow">Yellow</option>
      <option value="black">Black</option>
    </select>

    <br>

    <button type="button" id="addpearl">Add Pearl</button>

    <br><br><br><br>

    <p>Upset? Come bother me on discord! likeem_apples</p>

    <div class="variable" id="<%= pearlsList %>"> </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      defer>
      
    </script>
    <script type="module" src="/index.js"></script>

